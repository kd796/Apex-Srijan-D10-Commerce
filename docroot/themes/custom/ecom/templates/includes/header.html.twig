<header class="header">
  {% if  page.top_page or page.top_page_left %}
      <div class="top-page">
        <div class="wrapper-content">
          <div class="top-page__left">
            {{ page.top_page_left }}
          </div>
          <div class="top-page__right">
            {{ page.top_page }}
          </div>
        </div>
      </div>
  {% endif %}
  <div class="page-header">
    <div class="wrapper-content">
      {% if  page.logo %}
        <div class="page-header__logo">
          {{ page.logo }}
        </div>
      {% endif %}
      {% if  page.search %}
        <div class="page-header__search">
          {{ page.search }}
        </div>
      {% endif %}
      {% if  page.header %}
        <div class="page-header__menu">
          {{ page.header }}
        </div>
      {% endif %}
      {# Responsive menu #}
      <div class="middle-h-right">
        <div class="mobile-search">
          <div class="mobile-search-icon">
          </div>
          <div class="mobile-search-block d-none">
            {% if  page.search %}
              {{ page.search }}
            {% endif %}
            <div class="m-s-close">Close</div>
          </div>
        </div>
        <div class="mobile-nav">
          <div class="mobile-nav-icon">
          </div>
          {% if  page.header %}
            <div class="mobile-header d-none">
            {{ page.header }}
            </div>
          {% endif %}
        </div>
      </div>
      {# Responsive menu End #}
    </div>
  </div>
</header>