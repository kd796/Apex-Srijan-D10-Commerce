{% set cta = get_paragraph(elements.field_cta) %}
{% set target = cta.field_cta_target.value is same as('1') ? '_blank' : '_top' %}
{% set size = elements.field_size[0]['#markup'] %}
{% set form = content.field_form %}
{% if is_front_page %}
	{% set size = 'large' %}
{% endif %}

{% include '@atg/patterns/hero.html.twig' with {
	title_prefix: content.field_title_prefix[0]['#context']['value'],
	title: content.field_title[0]['#context']['value'],
	subtitle: content.field_subtitle[0]['#context']['value'],
	title_suffix: content.field_title_suffix[0]['#context']['value'],
	image: content.field_media_src,
	url: cta.field_cta_url[0].url | string,
	action: cta.field_cta_url[0].title,
	target: target,
	size: size,
  form: current_language.id == 'en' ? content.field_form : null,
} %}
