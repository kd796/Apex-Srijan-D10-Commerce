{% set cta = get_paragraph(elements.field_cta) %}
{% set target = cta.field_cta_target.value is same as('1') ? '_blank' : '_top' %}
<main class="main">
	<section class="section section--features">
		<div class="section-intro sticky">
			<h2 class="section-title">{{ elements.field_title[0]['#context']['value'] | raw }}</h2>
			<div class="section-intro-content">
				{{ elements.field_body_basic }}
			</div>
			<div class="section-intro-actions">
				<a href="{{ cta.field_cta_url[0].url }}" target="{{ target }}" class="button button--primary">{{ cta.field_cta_url[0].title }}</a>
			</div>
		</div>
		<div class="section-main">
			{{ pass_attributes(elements.field_featured_block, {size: 'large'}) }}
		</div>
	</section>
</main>
