{% set read_more_url = fields.field_read_more.content|render|trim|striptags %}

{% if is_external_url(read_more_url) %}
<div class="feature-desc">
 <a href="{{ read_more_url }}" target="_blank">
	<h3>{{ fields.title.content }}</h3>
	{{ fields.field_listing_page_image.content }}
	{{ fields.field_footer_note.content }}
  {{ fields.title.content }}
  {{ read_more_url }}
  </a>
</div>
{% else %}

<div class="feature-desc">
 <a href="{{ read_more_url }}">
	<h3>{{ fields.title.content }}</h3>
	{{ fields.field_listing_page_image.content }}
	{{ fields.field_footer_note.content }}
  {{ fields.title.content }}
  {{ read_more_url }}
  </a>
</div>
{% endif %}
